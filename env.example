# Environment variables for your Shopify app
# Copy this file to .env and fill in your actual values

# Your Shopify app's client ID (get this from your Partners dashboard)
SHOPIFY_API_KEY=your_api_key_here

# Your Shopify app's client secret (get this from your Partners dashboard)
SHOPIFY_API_SECRET=your_api_secret_here

# Your app's URL (for development, this will be your ngrok URL)
SHOPIFY_APP_URL=https://your-app-url.ngrok.io

# Database URL (you can use a simple file-based database for development)
DATABASE_URL=./database.sqlite

# Session secret for encrypting session data
SESSION_SECRET=your_session_secret_here

# Scopes your app needs (comma-separated)
SCOPES=write_products,read_products

# Development store URL (optional, for testing)
DEV_STORE_URL=your-dev-store.myshopify.com
